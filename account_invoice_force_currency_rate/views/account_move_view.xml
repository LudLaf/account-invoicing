<odoo>
    <record id="account_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <field name="currency_id" position="before">
                <field name="invoice_cash_rounding_id" />
                <field
                    name="new_rate_amount"
                    attrs="{'invisible': ['|', ('company_currency_id', '=', 'currency_id'), ('state', 'not in', ['draft'])], 'readonly': [('invoice_line_ids', '!=', [])]}"
                    groups="base.group_multi_currency"
                    force_save="1"
                />
                <field
                    name="currency_rate_amount"
                    readonly="True"
                    groups="base.group_multi_currency"
                />
            </field>
        </field>
    </record>
</odoo>
